/* miniprogram/pages/index/index.wxss */
.fail{
  background: rgba(255, 255, 255, 0.9);
  position:absolute;
  top:30rpx;
  display:flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.fixedStep {
  margin-top: 100rpx;
  position: fixed;
  z-index: 1024;
  width: 100%;
}

.UCenter-bg {
  background-image: url(https://ylmc2018-1256413011.cos.ap-beijing.myqcloud.com/colorui/afternoon.png);
  background-size: cover;
  height: 400rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg .gif-wave {
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

.toolItem {
  height: 80rpx;
  width: 80rpx;
}

.toolbox{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 35rpx;
  margin-right:35rpx;
}

.adsec{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
  background:white;

}

.swiper_container {
  height: 55rpx;
  width: 90%;
  line-height: 55rpx;
  padding-left: 10rpx;
}

.swiper_item {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}